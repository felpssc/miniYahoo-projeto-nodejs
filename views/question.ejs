<%- include('partials/header.ejs', {title}) %>
<body>
    <%- include('partials/navbar.ejs') %> 
    <div class="container">
        <br>
        <br>
        <div class="card">
            <div class="card-header">
                <h3> <%= question.title %>  </h3>
            </div>

            <div class="card-body">
                <p> <%= question.description %>  </p>
            </div>
        </div>
        <hr>
        <form method="POST" action="/reply">
            <div class="card-body">
                <label style="margin-bottom: 10px;" style="font-weight: 500;">Resposta:</label>
                <textarea required name="answerBody" class="form-control" placeholder="<%=`Digite sua resposta para '${question.title}'` %> "></textarea>
                <br>
                <input name="id" hidden type="text" value="<%=question.id%>">
                <button type="submit" class="btn btn-primary">Responder</button>
            </div>
        </form>

        <br>
        <br>
        <h3 class="">💬 Respostas:</h3>
        <br>

        <% if(answers.length <= 0){ %>
            <div class="card-header">
                <blockquote class="blockquote mb-0">
                  <p style="text-align: center; font-size: 16px;">Ops! Sem respostas para essa pergunta...</p>
                </blockquote>
            </div>
        <% } %> 

        <% answers.forEach(answer => { %>
            <div style="border-radius: 5px;" class="card-header">
                <div>
                  <p style="font-size: 12px;"><i><%= answer.createdAt %></i></p> 
                </div>
                <hr>
                <div class="card-body">
                  <blockquote style="word-wrap: break-word;" class="blockquote mb-0">
                    <p>↪️ Resposta: <%= answer.body %></p>
                  </blockquote>
                </div>
              </div>
              <br>
        <% }); %> 
    </div>


</body> 